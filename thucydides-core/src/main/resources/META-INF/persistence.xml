<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="db-manager">
        <class>net.thucydides.core.statistics.model.TestRun</class>
        <class>net.thucydides.core.statistics.model.TestRunTag</class>
        <class>net.thucydides.core.reports.html.history.TestResultSnapshot</class>
        <properties>
            <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
            <property name="hibernate.id.new_generator_mappings" value="true"/>
        </properties>
    </persistence-unit>
    <persistence-unit name="db-manager-OpenJPA">
        <provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>
        <class>net.thucydides.core.statistics.model.TestRun</class>
        <class>net.thucydides.core.statistics.model.TestRunTag</class>
        <class>net.thucydides.core.reports.html.history.TestResultSnapshot</class>
        <properties>
            <property name="openjpa.Log" value="DefaultLevel=WARN, Runtime=WARN, Tool=WARN"/>
        </properties>
    </persistence-unit>

</persistence>